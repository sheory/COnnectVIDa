    {% include 'main/header.njk'%}

  </head>
  <body>
    <div class="container-fluid contact-me">
      <div class="container container-contact">
        <form method="POST" action="/mensagem">
          <h3 class="contact-title">
            Entre em Contato</h3>
          <div class="form-group inputs-container">
            <input type="text" class="form-control" name="name" id="" placeholder="Nome" required>
            <input type="email" class="form-control" name="email" id="" placeholder="Email" required>
            <textarea class="form-control" rows="3" id="comment" name="body" required></textarea>
          </div>
          <div class="button-send">
            <button type="submit" class="btn-send">Enviar Mensagem</button>
          </div>
        </form>
      </div>
    </div>
    {% include 'main/footer.njk'%}
  </body>

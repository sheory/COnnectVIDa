
 {% extends "main/layout.njk" %}
    {% if error %}
    <script>
      $(document).ready(function(){
      $('.toast').toast('show');
    });
    </script>
  <div class="toast toast-error" style="position: absolute; top: 80%; right: 0;" data-delay="10000">
    <div class="toast-header">
      <strong class="mr-auto">Bootstrap</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body toast-body-error">
      Hello, world! This is a toast message.
    </div>
  </div>
{% endif %}
    {% if success %}
    <script>
      $(document).ready(function(){
      $('.toast').toast('show');
    });
    </script>
  <div class="toast toast-success" style="position: absolute; top: 80%; right: 0;" data-delay="10000">
    <div class="toast-header">
      <strong class="mr-auto">Bootstrap</strong>
      <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="toast-body toast-body-success">
      Hello, world! This is a toast message.
    </div>
  </div>
{% endif %}
{% block content %}
    <div class="container-fluid contact-me">
      <div class="container container-contact">
        <form method="POST" action="/mensagem">
          <h3 class="contact-title">
            Entre em Contato</h3>
          <div class="form-group inputs-container">
            <input type="text" class="form-control" name="name" placeholder="Nome" required="required">
            <input type="email" class="form-control" name="email" placeholder="Email" required="required">
            <textarea class="form-control" rows="3" id="comment" name="body" required="required"></textarea>
          </div>
          <div class="button-send">
            <button type="submit" class="btn-send">Enviar Mensagem</button>
          </div>
        </form>
      </div>
    </div>
        {% if error %}
      <div class="toast error">
        {{error}}
      </div>
    {% endif %}

    {% if success %}
      <div class="toast success">
        {{success}}
      </div>
    {% endif %}
    
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async="async" src="https://www.googletagmanager.com/gtag/js?id=UA-175769169-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());

      gtag('config', 'UA-175769169-1');
    </script>
{% endblock content %}

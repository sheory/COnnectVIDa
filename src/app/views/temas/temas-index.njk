<div class="cards">
	<div class="header">
		<h1> Postagens recentes </h1>
		<div  class="img-tema-mobile">
			<img src="assets/{{posts[0].subject}}-black.png">
	</div>
	<hr>
	</div>
	
	{%for post in posts%}
	<div class="card">
		<div class="{{post.subject}}"> 
			<img src="{{post.image}}">
			<div class="texto">
				<h4> <b> {{post.title}} </b></h4>
				<p class="previa-post"> {{post.subtitle}}</p>
				<div class="tag1">
					<button> <a href="/posts/{{post.id}}">ver publicação</a></button> 
				</div>
				
				{%if post.subject %}
					<div class="last-update-{{post.subject}}">
					<p class="last-update" >{{post.updated_at}}</p>
				</div>
			{%endif%}
			</div>
		</div>						
	</div>
	{%endfor%}
</div>

{% extends 'main/layout.njk' %}

{% block content %}
<div class="container">
    <div class="container-list">
        <div class="title-admin">
            <h1>Lista de Posts do Blog</h1>
        </div>
            <div class="container-post">
                <div class="title-post-admin"><h3>{{posts[0].title}}</h3></div>
                <div class="list-posts">
                <div class="desc-post">
                    <p>{{posts[0].subtitle}}</p>
                </div>     
                <div class="image-post"><img src="{{posts[0].image}}" alt=""></div>
            </div>
        </div>
        <div class="send-admin">
            <a href="/newpost" class="btn btn-success">Criar Novo Post</a>
        </div>
    </div>
</div>
{% endblock content%}